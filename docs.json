{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "AscendOTT Docs",
  "description": "Documentation for AscendOTT",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "icons": { "library": "lucide" },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "topics"
            ]
          },
          {
            "group": "Topics",
            "pages": [
              "topics/how-to-upload-a-video",
              "topics/edit_content",
              "topics/video-license",
              "topics/user-interface",
              "topics/plans",
              "topics/advertisement"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "API Endpoints",
            "openapi": "api-reference/openapi.json"
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Blog",
          "href": "https://blog.ascendott.com",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:info@ascend-ott.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Website",
      "href": "https://ascendott.com"
    }
  },
  "contextual": {
    "options": []
  },
  "footer": {
    "socials": {
      "x": "https://x.com/AscendOtt",
      "linkedin": "https://linkedin.com/showcase/ascendott"
    }
  }
}
